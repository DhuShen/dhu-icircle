<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dhu.domain.User">
    <!--    注册-->
    <insert id="insertUser" parameterType="com.dhu.domain.User">
        insert into user
        values (#{UserId}, #{UserPassword}, #{UserImg}, #{UserName}, #{UserSex}, #{UserLife}, #{UserTime}, #{UserMajor},
                #{UserIntroduction})
    </insert>
    <!--    登录-->
    <select id="selectByIdAndPassword" parameterType="com.dhu.domain.User" resultType="com.dhu.domain.User">
        select *
        from user
        where UserId = #{UserId}
          and UserPassword = #{UserPassword}
    </select>
    <!--    搜索圈子、帖子-->
</mapper>