<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dhu.dao.PostDao">
    <select id="selectByName" parameterType="String" resultType="com.dhu.domain.Post">
        <bind name="pattern" value="'%' + name + '%'" />
        select * from post where postName like #{pattern}
    </select>
    <select id="selectTen" resultType="com.dhu.domain.Post">
        select * from post ORDER BY postGood
    </select>
    <select id="selectByCircle" resultType="com.dhu.domain.Post">
        select * from post where post_CircleId=#{id}
    </select>
    <select id="selectByUser" resultType="com.dhu.domain.Post">
        select * from post where post_UserId=#{id}
    </select>
</mapper>